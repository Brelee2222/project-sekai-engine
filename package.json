{
  "name": "sonolus-pjsekai-engine",
  "version": "1.0.0",
  "description": "A recreation of Project Sekai: Colorful Stage! engine in Sonolus",
  "author": "NonSpicyBurrito",
  "repository": "github:NonSpicyBurrito/sonolus-pjsekai-engine",
  "license": "MIT",
  "keywords": [
    "Sonolus"
  ],
  "main": "dist/index.cjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "sonolus-cli --dev",
    "prebuild": "tsc -p . --noEmit && eslint --ext .mts ./src/",
    "build": "tsc -p ./lib/tsconfig.json && sonolus-cli --build && node ./lib/build.mjs"
  },
  "devDependencies": {
    "@types/node": "^16.18.24",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "sonolus-core": "~7.0.0-beta.0",
    "sonolus.js": "~9.0.0-beta.4",
    "typescript": "~5.0.4"
  }
}
